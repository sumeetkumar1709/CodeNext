<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:id="@+id/qcard"
        app:cardElevation="10dp"
        app:strokeColor="@color/background3"
        app:strokeWidth="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:cardBackgroundColor="#001B5C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namequestion"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/background3"
                android:text="Palindrome Count"
                android:textSize="14dp"
                android:gravity="left"
                android:maxLines="2"
                android:layout_gravity="left|top"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"/>



            <TextView
                android:id="@+id/scores10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:textSize="12dp"
                android:text="Scores: 10"
                android:textColor="@color/background3"/>

            <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginRight="18dp"
            app:cardBackgroundColor="#0079DA"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="8dp"
                android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/questionname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/questionname">

            <TextView
                android:id="@+id/difficultycardz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Easy"
                android:textColor="#BABABA"
                android:textSize="12dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_marginRight="40dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Status:"
                android:textColor="#E19F9F"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.39" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:paddingLeft="12dp"
                android:id="@+id/statusaccepted"
                android:paddingRight="12dp"
                android:text="Not accepted"
                android:textColor="#D6D6D6"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/textView13"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>