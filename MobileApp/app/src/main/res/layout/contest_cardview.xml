<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardparent"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:elevation="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        app:strokeColor="#959595"
        app:strokeWidth="2dp"
        android:layout_marginRight="24dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
          >
            <ImageView
                android:id="@+id/cardviewcontest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imagecontest"
                android:layout_width="100dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="50dp"
                android:layout_height="90dp"
                android:layout_marginRight="14dp"
                android:alpha="0.84"
                android:src="@drawable/ic_undraw_functions_re_alho"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/contestname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:maxWidth="190dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Interview Prep 4.0"
                android:textColor="@color/background2"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="4dp"
                android:visibility="invisible"
                android:id="@+id/leaderboard"
                android:src="@drawable/ic_leaderboard"
                app:layout_constraintBottom_toBottomOf="@+id/contestname"
                app:layout_constraintStart_toEndOf="@+id/contestname"
                app:layout_constraintTop_toTopOf="@+id/contestname" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="22dp"
                android:layout_marginTop="26dp"
                android:layout_height="22dp"
                app:cardBackgroundColor="#BABABA"
                app:cardCornerRadius="12dp"
                app:layout_constraintStart_toStartOf="@+id/contestname"
                app:layout_constraintTop_toBottomOf="@+id/contestname">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:padding="1dp"
                    android:src="@drawable/ic_baseline_code_24"
                    app:tint="#009688" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/contestmarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="60 Marks"
                android:textColor="#D3D3D3"
                android:textSize="12dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/cardView2"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toTopOf="@+id/cardView2" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#BABABA"
                app:cardCornerRadius="12dp"
                app:layout_constraintStart_toStartOf="@+id/contestname"
                app:layout_constraintTop_toBottomOf="@+id/cardView2">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:padding="1dp"

                    android:src="@drawable/ic_baseline_attach_file_24"
                    app:tint="#009688" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/contestquestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="3 Questions"
                android:textColor="#D3D3D3"
                android:textSize="12dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/cardView4"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toTopOf="@+id/cardView4" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:cardBackgroundColor="#BABABA"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="34dp"
                app:layout_constraintBottom_toBottomOf="@+id/contestquestions"
                app:layout_constraintStart_toEndOf="@+id/contestquestions"
                app:layout_constraintTop_toTopOf="@+id/contestquestions">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:padding="1dp"

                    android:src="@drawable/ic_baseline_timer_24"
                    app:tint="#009688" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/contestduration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="90 mins"
                android:textColor="#D3D3D3"
                android:textSize="12dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/cardView5"
                app:layout_constraintStart_toEndOf="@+id/cardView5"
                app:layout_constraintTop_toTopOf="@+id/cardView5" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="34dp"
                app:cardBackgroundColor="#BABABA"
                app:cardCornerRadius="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/contestmarks"
                app:layout_constraintStart_toEndOf="@+id/contestquestions"
                app:layout_constraintTop_toTopOf="@+id/cardView2">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:padding="1dp"

                    android:src="@drawable/ic_baseline_date_range_24"
                    app:tint="#009688" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/contestdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="24 July"
                android:layout_marginLeft="6dp"
                android:textColor="#D3D3D3"
                android:textSize="12dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/cardView6"
                app:layout_constraintStart_toEndOf="@+id/cardView6"
                app:layout_constraintTop_toTopOf="@+id/cardView6" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginRight="18dp"
                app:cardBackgroundColor="#0079DA"
                app:cardCornerRadius="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/contestname">

                <TextView
                    android:id="@+id/difficultycardzz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="Easy"
                    android:textColor="@color/background2"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>