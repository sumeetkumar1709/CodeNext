<body id="w">
	<a href="/admin">
        <img id ="back-btn" src="https://img.icons8.com/ios/50/FFFFFF/circled-left-2.png"/>
    </a>

	<div class="grid-content content small" id="add-problem-body">
		<div class="box" id="t-wrap">
            <div class="a-container">
                <div class="a-btn">
                    <a id="links" href="/admin/add" style="font-size: 15px;">ADD PROBLEM</a> 
                </div>
                <div class="a-btn">
                    <a id="links" href="/admin/new-contest" style="font-size: 15px;">HOST NEW CONTEST</a> 
                </div>
                <div class="a-btn-active">
                    <a id="links" href="/admin/my-contests" style="font-size: 15px;">SHOW/EDIT CONTESTS</a> 
                </div>
                <div class="a-btn">
                    <a id="links" href="/admin/manage-admins" style="font-size: 15px;">MANAGE ADMINS</a> 
                </div>
                
                
            </div>
			<div class="main-form">
			<h1 class="title center" id="contest-heading" > My Contests</h1>
			<hr>
			<table id="tb" class="table sortable">
				<thead>
					<tr>
						<th><a id="table-a"><i class="fa fa-sort" aria-hidden="true"></i> Code</a></th>
						<th><a id="table-a"><i class="fa fa-sort" aria-hidden="true"></i> Name</a></th>
						<th><a id="table-a"><i class="fa fa-sort" aria-hidden="true"></i> Starting At</a></th>
						<th><a id="table-a"><i class="fa fa-sort" aria-hidden="true"></i> Duration (minutes)</a></th>
						<th><a id="table-a"><i class="fa fa-sort" aria-hidden="true"></i> Publicly visibility</a></th>
						<th></th>
					</tr>
				</thead>
				<tbody id="show-all-contests">
					<% for(var i = 0; i < data.length; i++) {%>
					<tr>
						<td id="col">
							<%= data[i].code %>
						</td>
						<td id="col">
							<%= data[i].name %>
						</td>
						<td id="col">
							<%= data[i].D %>
						</td>
						<td id="col">
							<%= data[i].duration %>
						</td>
						<td id="col">
							<%= data[i].visible %>
						</td>
						<td>
							<form method="POST" action="/admin/dlt_contest/<%= data[i].code %>">
								<a href="/admin/edit-contest/<%= data[i].code %>"><button type="button"
										class="btn btn-success btn-sm">EDIT</button></a>
								<button type="submit" class="btn btn-danger btn-sm">DELETE</button>
							</form>
						</td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
		</div>
