<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/quizresult.css" type="text/css">
    <link rel="shortcut icon" href="/images/logo.png" type="image/x-icon">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
	<link rel="icon" href="/images/logo.png" type="image/x-icon">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.js"></script>

   
</head>
<body>
    <div class="intro-screen">
        <div class="intro-screen__titel">
            <% if (data.resultDisplay) { %>
            <div class="txt" id="start">View Results</div>
            <% } else { %>
            <div class="txt" id="no_start">Thank You For Playing The Quiz<br><br><br>
                <a href="/quiz" class="bn15">Quiz Page</a>
            </div>
            <% } %>
        </div>
        <div class="intro-screen__shape">
            <svg class="shape" width="100%" height="100vh" preserveAspectRatio="none" viewBox="0 0 1440 800"><path d="M -44,-50 C -52.71,28.52 15.86,8.186 184,14.69 383.3,22.39 462.5,12.58 638,14 835.5,15.6 987,6.4 1194,13.86 1661,30.68 1652,-36.74 1582,-140.1 1512,-243.5 15.88,-589.5 -44,-50 Z" pathdata:id="M -44,-50 C -137.1,117.4 67.86,445.5 236,452 435.3,459.7 500.5,242.6 676,244 873.5,245.6 957,522.4 1154,594 1593,753.7 1793,226.3 1582,-126 1371,-478.3 219.8,-524.2 -44,-50 Z"></path></svg>
            
            <div id="res">
                <h1 id="sc">Score:<%=result.correct%>/<%=data.questionCount%></h1>
            </div>
        </div>
    </div>

    
   
</body>



<script>
  "use strict";

const LANDING = {};
LANDING.intro = document.querySelector(".intro-screen");
LANDING.start = LANDING.intro.querySelector("div#start");
LANDING.path = LANDING.intro.querySelector("path");

const svgAnimation = () => {
  console.log("Animation");
  anime({
    targets: LANDING.intro,
    duration: 2000,
    easing: "easeInOutSine",
    translateY: "-200vh"
  });
  anime({
    targets: LANDING.path,
    duration: 1500,
    easing: "easeInOutSine",
    d: LANDING.path.getAttribute("pathdata:id")
  });
};

LANDING.start.addEventListener("click", svgAnimation);  

</script>
</html>